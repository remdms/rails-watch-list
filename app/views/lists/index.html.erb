<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema_seats.jpg') %>)">
  My lists
</div>

<div class="container">
  <div class="row mt-3 justify-content-end">
    <div class="col-4"><%= link_to "Create a movie list", new_list_path, class:"btn btn-info" %></div>
  </div>
  <div class="row mt-3">
    <% @lists.each do |list| %>
      <div class="col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list) do %>
          <div class="card-list text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
            <%= list.name %>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
