<h1><%= @list.name %></h1>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class:'btn btn-primary' %>
<div class="d-flex gap-3">
  <% @bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Movie poster">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %> - <%= bookmark.movie.rating.round(1) %> <i class="fa-solid fa-star"></i></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to 'delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'text-danger text-decoration-none' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Back", lists_path %>
