<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('cinema-1.jpg') %>)">
  <%= @list.name %>
</div>
<div class="container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class:'btn btn-primary my-3' %>
  <div class="d-flex flex-wrap gap-3">
    <% @bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src=<%= bookmark.movie.poster_url %> alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> - <%= bookmark.movie.rating.round(1) %> <i class="fa-solid fa-star"></i></h5>
          <p class="card-text"><%= bookmark.movie.overview.truncate_words(50) %></p>
          <p class="card-text blockquote-footer"><%= bookmark.comment %></p>
          <div class="d-flex justify-content-end"><%= link_to 'delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'text-danger text-decoration-none' %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
